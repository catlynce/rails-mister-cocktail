<h1>Cocktail <%= @cocktail.name %></h1>

<p><%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %></p>
<h3>List of ingredients</h3>

<ul>
    <% @cocktail.doses.each do |dose| %>
        <li>
            <span class="dose-description">
                <%= dose.description %>
            </span>
            <span class="ingredient-name">
                <%= dose.ingredient.name %>
            </span>
        </li>
    <% end %>
</ul>


<p>
    <%= link_to 'Back to Cocktails', cocktails_path, class: 'btn btn-info' %>
</p>